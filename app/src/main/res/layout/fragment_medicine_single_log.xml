<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_bg"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_view_label_doses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Doses:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_view_label_medicine"
        app:layout_constraintTop_toBottomOf="@+id/text_view_label_medicine" />

    <TextView
        android:id="@+id/text_view_dose_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="___"
        app:layout_constraintStart_toEndOf="@+id/text_view_label_doses"
        app:layout_constraintTop_toTopOf="@+id/text_view_label_doses" />

    <TextView
        android:id="@+id/text_view_label_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Medicine:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_medicine_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Rescue"
        app:layout_constraintStart_toEndOf="@+id/text_view_label_medicine"
        app:layout_constraintTop_toTopOf="@+id/text_view_label_medicine" />

    <TextView
        android:id="@+id/text_view_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="unit"
        app:layout_constraintStart_toEndOf="@+id/text_view_dose_count"
        app:layout_constraintTop_toTopOf="@+id/text_view_dose_count" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light">

    <!-- HEADER VIEW -->
    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_inventory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="@color/primary_text_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_header"
        app:layout_constraintEnd_toEndOf="@+id/view_header"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_header" />

    <!-- ACTION BUTTONS SECTION -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light_shade_2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view_header">

        <Button
            android:id="@+id/button_new_rescue_canister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:padding="10dp"
            android:text="New Canister"
            android:textColor="@color/primary_text_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_log_new_rescue_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:padding="10dp"
            android:text="Log New Amount"
            android:textColor="@color/primary_text_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_new_rescue_canister"
            app:layout_constraintTop_toTopOf="@+id/button_new_rescue_canister" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 1. CONTROLLER MEDICINE CONTAINER (NEW ID) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_controller_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_light_shade_2"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/constraint_layout_rescue_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_actions">

        <!-- Controller Medicine Title -->
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller Medicine"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Remaining Label -->
        <TextView
            android:id="@+id/text_view_controller_remaining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <!-- Purchase Date Label -->
        <TextView
            android:id="@+id/text_view_controller_purchase_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Purchase Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/controller_remaining_percentage"
            app:layout_constraintTop_toBottomOf="@+id/controller_remaining_percentage" />

        <!-- Remaining Numerator -->
        <TextView
            android:id="@+id/ctr_remaining_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/text_view_controller_remaining_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_controller_remaining_label" />

        <!-- Puffs Label -->
        <TextView
            android:id="@+id/text_view_controller_puffs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="puffs"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/ctr_remaining_denominator"
            app:layout_constraintStart_toEndOf="@+id/ctr_remaining_denominator"
            app:layout_constraintTop_toTopOf="@+id/ctr_remaining_denominator" />

        <!-- Expiry Date Value -->
        <TextView
            android:id="@+id/controller_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YY"
            app:layout_constraintStart_toStartOf="@+id/text_view_controller_expiry_date_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_controller_expiry_date_label" />

        <!-- Remaining Divider -->
        <TextView
            android:id="@+id/text_view_controller_remaining_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/ctr_remaining_numerator"
            app:layout_constraintStart_toEndOf="@+id/ctr_remaining_numerator" />

        <!-- Purchase Date Value -->
        <TextView
            android:id="@+id/controller_purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YY"
            app:layout_constraintStart_toStartOf="@+id/text_view_controller_purchase_date_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_controller_purchase_date_label" />

        <!-- Expiry Date Label -->
        <TextView
            android:id="@+id/text_view_controller_expiry_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Expiry Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_controller_purchase_date_label"
            app:layout_constraintStart_toEndOf="@+id/text_view_controller_purchase_date_label" />

        <!-- Remaining Denominator -->
        <TextView
            android:id="@+id/ctr_remaining_denominator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_controller_remaining_divider"
            app:layout_constraintStart_toEndOf="@+id/text_view_controller_remaining_divider" />

        <!-- Remaining Percentage Value -->
        <TextView
            android:id="@+id/controller_remaining_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/ctr_remaining_numerator"
            app:layout_constraintTop_toBottomOf="@+id/ctr_remaining_numerator" />

        <!-- Percent Label -->
        <TextView
            android:id="@+id/text_view_controller_percent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/controller_remaining_percentage"
            app:layout_constraintStart_toEndOf="@+id/controller_remaining_percentage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. RESCUE MEDICINE CONTAINER (NEW ID) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_rescue_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_light_shade_1"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_controller_container">

        <!-- Rescue Medicine Title -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue Medicine"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Remaining Label -->
        <TextView
            android:id="@+id/text_view_rescue_remaining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <!-- Purchase Date Label -->
        <TextView
            android:id="@+id/text_view_rescue_purchase_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Purchase Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/rescue_remaining_percentage"
            app:layout_constraintTop_toBottomOf="@+id/rescue_remaining_percentage" />

        <!-- Remaining Numerator -->
        <TextView
            android:id="@+id/rescue_remaining_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/text_view_rescue_remaining_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_rescue_remaining_label" />

        <!-- Puffs Label -->
        <TextView
            android:id="@+id/text_view_rescue_puffs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="puffs"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/rescue_remaining_denominator"
            app:layout_constraintStart_toEndOf="@+id/rescue_remaining_denominator"
            app:layout_constraintTop_toTopOf="@+id/rescue_remaining_denominator" />

        <!-- Expiry Date Value -->
        <TextView
            android:id="@+id/rescue_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YY"
            app:layout_constraintStart_toStartOf="@+id/text_view_rescue_expiry_date_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_rescue_expiry_date_label" />

        <!-- Remaining Divider -->
        <TextView
            android:id="@+id/text_view_rescue_remaining_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/rescue_remaining_numerator"
            app:layout_constraintStart_toEndOf="@+id/rescue_remaining_numerator" />

        <!-- Purchase Date Value -->
        <TextView
            android:id="@+id/rescue_purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YY"
            app:layout_constraintStart_toStartOf="@+id/text_view_rescue_purchase_date_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_rescue_purchase_date_label" />

        <!-- Expiry Date Label -->
        <TextView
            android:id="@+id/text_view_rescue_expiry_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Expiry Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_rescue_purchase_date_label"
            app:layout_constraintStart_toEndOf="@+id/text_view_rescue_purchase_date_label" />

        <!-- Remaining Denominator -->
        <TextView
            android:id="@+id/rescue_remaining_denominator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_rescue_remaining_divider"
            app:layout_constraintStart_toEndOf="@+id/text_view_rescue_remaining_divider" />

        <!-- Remaining Percentage Value -->
        <TextView
            android:id="@+id/rescue_remaining_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/rescue_remaining_numerator"
            app:layout_constraintTop_toBottomOf="@+id/rescue_remaining_numerator" />

        <!-- Percent Label -->
        <TextView
            android:id="@+id/text_view_rescue_percent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/rescue_remaining_percentage"
            app:layout_constraintStart_toEndOf="@+id/rescue_remaining_percentage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
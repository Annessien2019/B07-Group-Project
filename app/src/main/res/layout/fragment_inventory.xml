<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="@color/primary_text_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_inventory_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_weight="2">

        <TextView
            android:id="@+id/text_view_remaining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_purchase_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Purchase Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/text_view_remaining_percentage"
            app:layout_constraintTop_toBottomOf="@+id/text_view_remaining_percentage" />

        <TextView
            android:id="@+id/text_view_remaining_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/text_view_remaining_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_remaining_label" />

        <TextView
            android:id="@+id/text_view_puffs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="puffs"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_remaining_denominator"
            app:layout_constraintStart_toEndOf="@+id/text_view_remaining_denominator"
            app:layout_constraintTop_toTopOf="@+id/text_view_remaining_denominator" />

        <TextView
            android:id="@+id/text_view_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YY"
            app:layout_constraintStart_toStartOf="@+id/text_view_expiry_date_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_expiry_date_label" />

        <TextView
            android:id="@+id/text_view_remaining_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_remaining_numerator"
            app:layout_constraintStart_toEndOf="@+id/text_view_remaining_numerator" />

        <TextView
            android:id="@+id/text_view_purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YY"
            app:layout_constraintStart_toStartOf="@+id/text_view_purchase_date_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_purchase_date_label" />

        <TextView
            android:id="@+id/text_view_expiry_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Expiry Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/text_view_purchase_date"
            app:layout_constraintTop_toBottomOf="@+id/text_view_purchase_date" />

        <TextView
            android:id="@+id/text_view_remaining_denominator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_remaining_divider"
            app:layout_constraintStart_toEndOf="@+id/text_view_remaining_divider" />

        <TextView
            android:id="@+id/text_view_remaining_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/text_view_remaining_numerator"
            app:layout_constraintTop_toBottomOf="@+id/text_view_remaining_numerator" />

        <TextView
            android:id="@+id/text_view_percent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_remaining_percentage"
            app:layout_constraintStart_toEndOf="@+id/text_view_remaining_percentage" />

        <Button
            android:id="@+id/button_log_new_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:padding="10dp"
            android:text="Log New Amount"
            android:textColor="@color/primary_text_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_inventory_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="368dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_weight="2">

        <TextView
            android:id="@+id/text_view_remaining_label"

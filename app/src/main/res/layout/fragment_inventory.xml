            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_purchase_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Purchase Date"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/text_view_remaining_percentage"
            app:layout_constraintTop_toBottomOf="@+id/text_view_remaining_percentage" />

        <TextView
            android:id="@+id/text_view_remaining_numerator"
            android:layout_width="wrap_content"
